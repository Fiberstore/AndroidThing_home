<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#383431"
              android:orientation="vertical">

    <Button
        android:id="@+id/closePage_button"
        android:fontFamily="@font/msyh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭页面"/>

    <TextView
        android:id="@+id/tvPairedDevices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black90"
        android:fontFamily="@font/msyh"
        android:paddingLeft="5dp"
        android:text="已配对"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/lvPairedDevices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/background_corner"
        android:stackFromBottom="true"/>

    <TextView
        android:id="@+id/tvNewDevices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black90"
        android:fontFamily="@font/msyh"
        android:paddingLeft="5dp"
        android:text="正在扫描"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/lvNewDevices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:background="@drawable/background_corner"
        android:stackFromBottom="true"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btBluetoothScan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/msyh"
        android:text="扫描"/>
</LinearLayout>
